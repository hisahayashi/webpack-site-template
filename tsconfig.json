  "compilerOptions":{
    "outDir": "./built/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es6", "es2017", "es2015.promise", "dom"],
    "typeRoots": ["./src/types", "./node_modules/@types/"]
  },
  "include": [
    "./src/**/*"
  ]
}
